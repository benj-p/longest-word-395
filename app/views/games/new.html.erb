<h1>The longest word game</h1>

<p>
  <% @grid.each do |letter| %>
    <%= letter %>
  <% end %>
</p>

<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <input type="text" name="attempt" placeholder="What's your guess?">
  <input type="submit">
</form>
